@model user;
<div>
	<div style="margin-top: 100px; " class="row g-0">
		<img src="https://avatars.mds.yandex.net/i?id=0baec8a2e048a7c817a6221f6108f5f48b46314e-15463503-images-thumbs&n=13" class="col-6 border-2" style="border-top-left-radius: 20px;  border-bottom-left-radius:20px" />
		<div class="bg-dark col-6" style=" border-top-right-radius:20px; border-bottom-right-radius:20px">
			<h2 class="text-light m-5">Удобное школьное расписание</h2>
			<p class="text-light m-5" style="font-size:20px">MyLesson - сайт позволяющий составлять расписания для школы.</p>
			<p class="text-light m-5" style="font-size:20px"> Учитывает загруженность учителей и кабинетов.</p>
			<p class="text-light m-5" style="font-size:20px"> Удобен в использовании и не требует долгого освоения</p>
			<div class="row justify-content-center">
				<a class="btn btn-light col-6 m-5" href="#reg" type="submit">
					Начать работу
				</a>
			</div>	
		</div>
	</div>
	<div class="segment">
		<form method="post" asp-action="Privacy" asp-controller="Home">
			<div class="row justify-content-center">
				<h1 class="text-dark m-2">У меня есть аккаунт</h1>
				<input type="text" placeholder="Логин" class="input-group-text col-6 m-3" name="login"/>
				<span asp-validation-for="login" class="col-6"></span>
				<input type="text" placeholder="Пароль" class="input-group-text col-6 m-3" name="password"/>
				<span asp-validation-for="password" class="col-6"></span>
				<button class="btn btn-dark col-6 m-3">
					Войти
				</button>
			</div>
		</form>	
	</div>
	<br />
	<h1 class="text-dark m-2" id="reg">Зарегистрироваться</h1>
	<div class="segment">
		<form method="post" asp-action="AddAccount" asp-controller="Home">
			<div class="row justify-content-center">
				<input type="text" placeholder="Логин" class="input-group-text col-6 m-3" name="login1" />
				@{
					if (ViewBag.n == "Введите логин")
					{
						<p class="text-black col-6">@ViewBag.n</p>
					}
				}
				<input type="text" placeholder="Пароль" class="input-group-text col-6 m-3" name="password1" />				
				@{
					if (ViewBag.num == "Введите пароль")
					{
						<p class="text-black col-6">@ViewBag.num</p>
					}				
				}				
				<button class="btn btn-dark col-6 m-3" onclick="aler">
					Зарегистрироваться
				</button>
			</div>
		</form>	
	</div>
	<h1 class="text-dark">Оставьте отзыв :)</h1>
	<div class="row segment justify-content-center">
		<div class="mb-3">
			<a class="text-dark text-decoration-none">Ваше имя</a>
			<input type="text" name="login" title="Ваше имя" class="form-control" style="width:100%;" />
		</div>
		<a class="text-dark text-decoration-none">Ваша оценка</a>
		<div class="d-flex justify-content-center gap-2">
			<img type="image" src="~/css/star.png" style="width:40px; height:40px;" class="mx-1" id="one" dop="/css/start.png" />
			<img type="image" src="~/css/star.png" style="width:40px; height:40px;" class="mx-1" id="two" dop="/css/start.png" />
			<img type="image" src="~/css/star.png" style="width:40px; height:40px;" class="mx-1" id="three" dop="/css/start.png" />
			<img type="image" src="~/css/star.png" style="width:40px; height:40px;" class="mx-1" id="four" dop="/css/start.png" />
			<img type="image" src="~/css/star.png" style="width:40px; height:40px;" class="mx-1" id="five" dop="/css/start.png" />
			<input type="hidden" value="0" id="value" name="price" />
		</div>
		<br />
		<a class="text-dark text-decoration-none">Ваше мнение</a>
		<div>
			<input type="text" name="text" title="Ваше мнение" class="form-control" style="width:100%;" />
		</div>
		<div class="row justify-content-center m-3">
			<button class="btn btn-dark text-light col-6" type="submit">Отправить отзыв</button>
		</div>
	</div>
</div>
<script>
	const one = document.getElementById('one');
	const two = document.getElementById('two');
	const three = document.getElementById('three');
	const four = document.getElementById('four');
	const five = document.getElementById('five');
	const price = document.getElementById('value');
	let i = 0;
	one.addEventListener('click',() =>{
		one.setAttribute('src','/css/start.png');

		price.setAttribute('value',1);

		three.setAttribute('src','/css/star.png');
		two.setAttribute('src','/css/star.png');			
		four.setAttribute('src','/css/star.png');
		five.setAttribute('src','/css/star.png');
	});
	two.addEventListener('click',() =>{
		two.setAttribute('src','/css/start.png');
		one.setAttribute('src','/css/start.png');

		price.setAttribute('value',2);

		three.setAttribute('src','/css/star.png');
		four.setAttribute('src','/css/star.png');
		five.setAttribute('src','/css/star.png');
	});
	three.addEventListener('click',() =>{
		three.setAttribute('src','/css/start.png');
		two.setAttribute('src','/css/start.png');
		one.setAttribute('src','/css/start.png');

		price.setAttribute('value',3);

		four.setAttribute('src','/css/star.png');
		five.setAttribute('src','/css/star.png');
	});
	four.addEventListener('click',() =>{
		three.setAttribute('src','/css/start.png');
		two.setAttribute('src','/css/start.png');
		one.setAttribute('src','/css/start.png');
		four.setAttribute('src','/css/start.png');

		price.setAttribute('value',4);

		five.setAttribute('src','/css/star.png');
	});
	five.addEventListener('click',() =>{
		three.setAttribute('src','/css/start.png');
		two.setAttribute('src','/css/start.png');
		one.setAttribute('src','/css/start.png');
		four.setAttribute('src','/css/start.png');
		five.setAttribute('src','/css/start.png');
		price.setAttribute('value',5);
	});
</script>
