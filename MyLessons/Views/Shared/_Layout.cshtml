<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyLessons</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyLessons.styles.css" asp-append-version="true" />
</head>
<body>
    @model user;
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <h1 class="navbar-brand text-light mb-0">MyLessons</h1>
                    <form class="nav-link" asp-controller="Home" asp-action="MainPanel" method="get">
                        <input type="hidden" asp-for="login" />
                        <input type="hidden" asp-for="password" />
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-link text-decoration-none text-light p-0">Главная панель</button>
                    </form>
                    <form class="nav-link" asp-controller="Home" asp-action="Table" method="get">
                        <input type="hidden" asp-for="login" />
                        <input type="hidden" asp-for="password" />
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-link text-decoration-none text-light p-0">Таблица</button>
                    </form>
                </div>
                <div class="ms-auto">
                    <a class="nav-link text-light" asp-action="Index" asp-controller="Home">Выйти</a>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
           Итоговый проект Цыганова К. 2026
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/file.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
